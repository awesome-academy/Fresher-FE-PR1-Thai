mixin categoryList(list)
	ul
		each val in list
			if val.isActive 
				li.active
					i(class="fas fa-circle")
					a(href="products.html")= val.name 
					span= '(' + val.quantity + ')'
			else 
				li 
					a(href="products.html")= val.name 
					span= '(' + val.quantity + ')'

mixin breadcrumb(items) 
	nav.direction-nav 
		ul.direction-list
			each item in items
				if item.active
					li.direction-item.active 
						a(href=item.href)= item.label
				else 
					li.direction-item 
						a(href=item.href)= item.label

mixin pagination
	nav(aria-label="navigation")
		ul.pagination
			li.page-item
				a(class="page-link" href="#" aria-label="Previous")
					span(aria-hidden="true")
						i(class="fas fa-caret-left")
			li.page-item
				a(class="page-link" href="#") 1
			li.page-item
				a.active(class="page-link" href="#") 2
			li.page-item
				a(class="page-link" href="#") 3
			li.page-item
				a(class="page-link" href="#") 4
			li.page-item
				a(class="page-link" href="#") 5
			li.page-item
				a(class="page-link" href="#" aria-label="Previous")
					span(aria-hidden="true")
						i(class="fas fa-caret-right")

mixin cartItem(item)
	tr
		td.cart-img
			img(src= item.img, alt=item.name)
		td.cart-name= item.name
		td.cart-price= item.price
		td.cart-quantity= item.quantity
		td.cart-total= item.total
		td.cart-del
			i(class="far fa-trash-alt")
			
mixin cartList(list)
	each val in list 
		+cartItem(val)

mixin formGroup(type, name, id, label)
	if type == "submit"
		.form-group
			button(type="submit").btn.btn-default GỬI
	else if type == "textarea"
		.form-group
			label(for = id)= label
			textarea(name = name, id = id)
	else
		.form-group
			label(for = id)= label
			input(type = type, name = name, id = id)
