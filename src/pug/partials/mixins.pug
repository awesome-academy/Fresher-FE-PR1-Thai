mixin ProductItem(itemType, imgSrc, itemName, itemPrice, itemOldPrice)
	li(class="product__item col col-12 col-sm-6 col-lg-3")&attributes(attributes)
		.product__item-wrap
			.border-right 
			.border-left
			.product__item-thumbnail.position-relative
				if (itemType)
					case itemType
						when "hot"
							+HotLable
						when "new"
							+NewLable
						default
							+SaleLable
				a.item-link.d-block
					img(class="item-img" src=imgSrc alt="hinhanh")
				.item-option
					a(href="javacript:void(0)")
						i(class="fas fa-heart")
						span Yêu thích 
					a(href="javacript:void(0)")
						i(class="far fa-chart-bar")
						span So sánh 
					a(href="javacript:void(0)")
						i(class="fas fa-compress-alt")
			.product__item-info
				a.item-name(href="javacript:void(0)")= itemName
				div 
					span.item-price= itemPrice
					span.item-old-price= itemOldPrice
			.product__addto-cart 
				+AddCartBtn

mixin ListProduct(list)
	ul.row.g-5
		each val in list 
			+ProductItem(val.type, val.img, val.name, val.price, val.oldPrice)
			
mixin AddCartBtn 
	button.btn.btn-addto-card ADD TO CART

