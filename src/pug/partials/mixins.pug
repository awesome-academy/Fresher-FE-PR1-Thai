mixin SubNavItem(text)
	li.header-sub-item
		a(href="javascript:void(0)")= text
					
mixin UserNavItem(text, state)
	li.user-item 
		case text 
			when "Giỏ hàng"
				a.user-link(href="cart.html")= text
			when "Trạng thái đơn hàng"
				a.user-link(href="orders.html")= text
			when "Đăng nhập"
				a.user-link(href="login.html")= text
			when "Đăng ký"
				a.user-link(href="register.html")= text
			default 
				a.user-link(href="javascript:void(0)")= text

mixin DropDownList(list)
	ul.header-subnav-list
		each val in list
			+SubNavItem(val)

mixin BannerItem(url)
	.col-lg-3.col-6 
		img(src=url, alt="hinhanh")

mixin Dots
	.dots
		.dot.active
		.dot 
		.dot

mixin NewsItem(title, author, date, comments, desc, img)
	.news-item 
		a.news-img.d-block(href="news.html") 
			img(src=img, alt="hinhanh")
			div
				i(class="fas fa-link")
		h2= title
		div 
			span= 'Đăng bởi ' + author
			span= date
			span= comments + ' bình luận'
		p= desc 
		a.readmore(href="news.html") Read more 

mixin NewsList(list)
	.news-list.row
		each val in list 
			+NewsItem(val.title, val.author, val.date, val.comments, val.desc, val.img)

