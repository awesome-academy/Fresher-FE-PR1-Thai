extends ../layouts/layout

block content
	.main-login.main-content
		section.direction
			block logBreadcrumb
				+breadcrumb(loginBreadcrumbItems)
		section.login-heading
			.login-heading-left
				block logTitle
					+sectionHeader("ĐĂNG NHẬP")
			.login-heading-right
				block logHeaderBtn
					a(href="signup.html" class="btn btn-default") ĐĂNG KÝ 
		section.login-content
			block logForm
				form.form.login-form(action="#")
					h3 KHÁNH HÀNG ĐĂNG NHẬP 
					p.form-message Nếu có một tài khoản, xin vui lòng đăng nhập
					+formGroup({ type: "email", name: "login-email", id: "login-email", label: "Email *" })
					+formGroup({ type: "password", name: "login-password", id: "login-password", label: "Password *" })
					+formGroup({ type: "link", label: "Quên mật khẩu", link: "javascript:void(0)" })
					+formGroup({ type: "submit", label: "Đăng nhập" })
